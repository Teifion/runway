<div metal:use-macro="layout">
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li class="active">News</li>
  </ol>
  
  <div metal:fill-slot="content">
    <script type="text/javascript" charset="utf-8">
      sidebar_active('news');
    </script>
    
    <script src="${request.rel('static/validator.js')}"></script>
    
    <div class="row first-row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            
            <div class="row">
              <div class="col-sm-3 col-md-2 col-lg-1">
                <a href="${request.route_url('news.general.home')}" class="block-link">
                  <i class="fa fa-newspaper-o fa-fw fa-3x"></i><br />
                  News home
                </a>
              </div>
              
              <div class="col-sm-3 col-md-2 col-lg-1">
                <a href="${request.route_url('news.admin.channel.new')}" class="block-link">
                  <i class="fa fa-plus fa-fw fa-3x"></i><br />
                  New channel
                </a>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12 col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-newspaper-o fa-fw"></i>
            News admin
          </div>
          
          <div class="panel-body">
            
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Owner</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="(c, owner) channels">
                  <td>${c.name}</td>
                  <td>${owner.username}</td>
                  <td>${c.description}</td>
                  <td>
                    <i class="fa fa-eye-slash fa-fw" tal:condition="c.hidden"></i>
                  </td>
                  <td>
                    <a href="${request.route_url('news.admin.channel.edit', channel_id=c.id)}" class="btn btn-default">
                      Edit
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
            
            
          </div>
        </div>
        
      </div>
      
    </div>
    
  </div>
</div>
