<div metal:use-macro="layout">
  <div metal:fill-slot="sidebar_logo">
    Wordy
  </div>
  
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li><a href="${request.route_url('wordy.home')}">Wordy</a></li>
    <li class="active">Preferences</li>
  </ol>
  
  <ul metal:fill-slot="navbar_button" class="navbar-buttons">
    <li>
      <a href="${request.route_url('wordy.home')}" class="btn btn-default btn-sm">Wordy Menu</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.preferences')}" class="btn btn-default btn-sm disabled">Wordy Preferences</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.stats')}" class="btn btn-default btn-sm">Wordy Stats</a>
    </li>
  </ul>
  
  <div metal:fill-slot="content">
    <script type="text/javascript" charset="utf-8">
      $(function() {
        $('#sidebar_wordy').addClass('menu-active');
        $('#sidebar_wordy a').addClass('icon-active');
      });
    </script>
    
    <div class="row first-row" tal:condition="message != None">
      <div class="col-md-12">
        <div class="alert alert-${message[0]} alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          ${structure:message[1]}
        </div>
      </div>
    </div>
    
    <div class="row first-row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
              <!-- <i class="fa fa-check-circle fa-fw"></i> -->
              Wordy preferences
          </div>
          
          <div class="panel-body">
            
            <form action="${request.route_url('wordy.preferences')}" method="post" accept-charset="utf-8">
              <div class="row first-row">
                <div class="col-md-2 col-lg-1">
                  <label for="matchmaking" class="control-label">Matchmaking</label>
                </div>
                <div class="col-md-2 col-lg-1">
                  <label for="matchmaking_true" class="control-label">Enable:</label>
                  <input type="radio" name="matchmaking" id="matchmaking_true" value="true" tal:attributes="checked profile.matchmaking"/>
                </div>
                <div class="col-md-2 col-lg-1">
                  <label for="matchmaking_false" class="control-label">Disable:</label>
                    <input type="radio" name="matchmaking" id="matchmaking_false" value="false" tal:attributes="checked not profile.matchmaking"/>
                </div>
                <div class="col-md-6 col-lg-9">
                  &nbsp;&nbsp;
                  If enabled the system is able to match you up against other players searching for a game.
                </div>
              </div>
              <br />
              
              <input type="submit" value="Save changes" name="form.submitted" class="btn btn-primary" />
            </form>
          </div>
        </div>
      </div>
      
      <!-- <div metal:fill-slot="footer">
        Open source - <a href="http://github.com/teifion/wordy2">http://github.com/teifion/wordy2</a>
      </div> -->
    </div>
  </div>
</div>