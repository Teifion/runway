<div metal:use-macro="layout">
  <div metal:fill-slot="sidebar_logo">
    Wordy
  </div>
  
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li class="active">Wordy</li>
  </ol>
  
  <ul metal:fill-slot="navbar_button" class="navbar-buttons">
    <li>
      <a href="${request.route_url('wordy.home')}" class="btn btn-default btn-sm disabled">Wordy Menu</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.preferences')}" class="btn btn-default btn-sm">Wordy Preferences</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.stats')}" class="btn btn-default btn-sm">Wordy Stats</a>
    </li>
  </ul>
  
  <div metal:fill-slot="content">
    <script type="text/javascript" charset="utf-8">
      $(function() {
        $('#sidebar_wordy').addClass('menu-active');
        $('#sidebar_wordy a').addClass('icon-active');
      });
    </script>
        
    <div class="row first-row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
              <i class="fa fa-check-circle fa-fw"></i>
              Games awaiting your move
          </div>
          
          <div class="panel-body">
            <div tal:condition="len(game_list) == 0">
              You have no active games, why not challenge someone?<br /><br />
              <a href="${request.route_url('wordy.new_game')}" class="btn btn-success btn-block">Find an opponent</a>
            </div>
            
            <div tal:condition="len(game_list) > 0">
              <a href="${request.route_url('wordy.view_game', game_id=g[0])}" tal:repeat="g game_list" class="btn btn-primary btn-block">${', '.join([names[p] for p in g[3] if p != the_user.id])} (Turn ${g[2]})</a>
              
              <br /><br />
              <a href="${request.route_url('wordy.new_game')}" class="btn btn-default btn-block">New game</a>
            </div>
          </div>
        </div>
      </div>
    
      <div class="col-md-6">
        <div class="panel panel-default">
          
          <div class="panel-heading">
            <i class="fa fa-ellipsis-h fa-fw"></i>
            Games awaiting your opponent's move
          </div>
      
          <div class="panel-body">
            <a href="${request.route_url('wordy.view_game', game_id=g[0])}" tal:repeat="g waiting_list" class="btn btn-warning btn-block">${g[1]} (Turn ${g[2]})</a>
          </div>
        </div>
      </div>
      
      <!-- <div metal:fill-slot="footer">
        Open source - <a href="http://github.com/teifion/wordy3">http://github.com/teifion/wordy3</a>
      </div> -->
      
    </div>
    
  </div>
</div>