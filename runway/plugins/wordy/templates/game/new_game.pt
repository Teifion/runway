<div metal:use-macro="pre_content">
  <div metal:fill-slot="sidebar_logo">
    Wordy
  </div>
  
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li><a href="${request.route_url('wordy.home')}">Wordy</a></li>
    <li class="active">Stats</li>
  </ol>
  
  <ul metal:fill-slot="navbar_button" class="navbar-buttons">
    <li>
      <a href="${request.route_url('wordy.home')}" class="btn btn-default btn-sm">Wordy Menu</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.preferences')}" class="btn btn-default btn-sm">Wordy Preferences</a>
    </li>
    <li>
      <a href="${request.route_url('wordy.stats')}" class="btn btn-default btn-sm disabled">Wordy Stats</a>
    </li>
  </ul>
  
  <div metal:fill-slot="content">
    <script type="text/javascript" charset="utf-8">
      $(function() {
        $('#sidebar_wordy').addClass('menu-active');
        $('#sidebar_wordy a').addClass('icon-active');
      });
    </script>
    
    <div class="row first-row">
      <div class="col-sm-12 col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-play fa-fw"></i>
            Start a new game of Wordy
          </div>
          
          <div class="panel-body">
            <form action="${request.route_url('wordy.new_game')}" method="post" accept-charset="utf-8">
                <a href="${request.route_url('wordy.matchmake')}" class="btn btn-default btn-block">Automatically find me an opponent</a>
                <br />
                
                <div tal:condition="not profile.matchmaking" class="alert alert-warning">
                    You've not enabled matchmaking. If you enable it the system will be able to create games for you. You can enable matchmaking through your <a class="alert-link" href="${request.route_url('wordy.preferences')}">Wordy preferences</a>.
                    <br /><br />
                    
                    Wordy will automatically not assign you any new games if you've not made any moves in the last two days.
                </div>
                <br />
                
                <h2 style="text-align:center;">Or...</h2>
                <br /><br />
                
                You may select up to 3 opponents for your game.
                <br /><br />
                
                <input type="text" class="form-control", name="opponent_name1" value="${request.params.get('opponent_name1', '')}" id="opponent_name1" autofocus="autofocus"/><br />
                <input type="text" class="form-control", name="opponent_name2" value="${request.params.get('opponent_name2', '')}"/><br />
                <input type="text" class="form-control", name="opponent_name3" value="${request.params.get('opponent_name3', '')}"/><br />
                
                <input type="submit" id="main_submit" name="form.submitted" class="btn btn-primary btn-block" value="Start game"/>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- <div metal:fill-slot="footer">
        Open source - <a href="http://github.com/teifion/wordy2">http://github.com/teifion/wordy2</a>
    </div> -->
</div>