<div metal:use-macro="pre_content">
  <div metal:fill-slot="sidebar_logo">
    Hooks
  </div>
  
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li><a href="${request.route_url('dev.home')}">Developer</a></li>
    <li class="active">List Hooks</li>
  </ol>
  
  <div metal:fill-slot="content">
    <div class="row first-row">
      <div class="col-md-6 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <!-- <i class="fa fa-wrench fa-fw"></i> -->
            Hooks
          </div>
          
          <div class="panel-body">
            <a href="${request.route_url('dev.home')}" class="btn btn-default">
              <!-- <i class="fa fa-wrench fa-fw"></i> -->
              Back to Developer home
            </a>
            <br /><br />
            
            <table class="table table-striped table-hover table-condensed">
              <thead>
                <tr>
                  <th colspan="2">Hook</th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="(name, description) hooks">
                  <td>${name}</td>
                  <td>${description}</td>
                </tr>
              </tbody>
            </table>
            
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>