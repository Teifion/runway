<div metal:use-macro="pre_content">
  <div metal:fill-slot="sidebar_logo">
    empty_module
  </div>
  
  <ol class="breadcrumb" metal:fill-slot="breadcrumbs">
    <li><a href="${request.route_url('/')}">${request.runway_settings.system['name']}</a></li>
    <li><a href="${request.route_url('admin.home')}">Admin</a></li>
    <li><a href="${request.route_url('themes.admin.home')}">Themes</a></li>
    <li class="active">Switch theme</li>
  </ol>
  
  <div metal:fill-slot="content">
    <script src="${request.rel('static/validator.js')}"></script>
    <script type="text/javascript" charset="utf-8">
      $(function() {
        $('#sidebar_admin').addClass('menu-active');
        $('#sidebar_admin a').addClass('icon-active');
      });
    </script>
    
    <div class="row first-row">
      <div class="col-md-12 col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <!-- <i class="fa fa-file-text fa-fw"></i> -->
            Themes
          </div>
          
          <div class="panel-body">
            <a href="${request.route_url('themes.admin.home')}" class="btn btn-default">
              <i class="fa fa-level-up fa-fw"></i>
              Back to Themes
            </a>
            
            <a href="${request.route_url('dev.restart')}" class="btn btn-default" tal:condition="'developer' in request.user.permissions()">Restart</a>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>
